{% macro TestimonialOne(options) %}
    {% import "components/Cards/cards.njk" as Card %}
    <div class="testimonial-area testimonial-area--inner-1 bg-default-3 border-bottom border-default-color-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-9 col-xs-10">
                    <!-- Section Title -->
                    <div class="section-title section-title--l8 text-center mb-5 mb-lg-7">
                        <h6 class="section-title__sub-heading text-bittersweet" data-aos="fade-up" data-aos-duration="500" data-aos-once="true">Testimonial</h6>
                        <h2 class="section-title__heading" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300" data-aos-once="true">We Care About Our Customers Experience Too</h2>
                    </div>
                    <!--/ .Section Title -->
                </div>
            </div>
            <div class="row justify-content-center testimonial-mobile-slider--inner-1" data-aos="fade-up" data-aos-duration="500"
                data-aos-delay="400" data-aos-once="true">
                {% for data in options.testimonialData %}
                    <div class="col-lg-4 col-md-12">
                        {{Card.testimonial(
                {
                "image" : data.image,
                "userName" : data.userName,
                "userPosition" : data.userPosition,
                "description":data.description
                }
                )}}
                    </div>
                {% endfor %}
            </div>
            <div class="buttons mx-auto text-center">
                <a class="btn btn-primary btn--lg-2 text-white rounded-50 m-2" href="#">More reviews</a>
                <a class="btn btn-outline-primary btn--lg-2 rounded-50 m-2" href="#">Submit yours</a>
            </div> 
        </div>
    </div>
{% endmacro %}


