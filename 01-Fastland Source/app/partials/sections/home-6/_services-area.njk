{% macro render(options) %}
{% import "components/_widgets.njk" as Card %}
<div class="service-area service-area--l7 bg-default">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-6 col-md-9 col-xs-10">
                <!-- Section Title -->
                <div class="section-title section-title--l7">
                    <h6 class="section-title__sub-heading text-readical-red" data-aos="fade-up" data-aos-duration="500"
                        data-aos-once="true">Our Services</h6>
                    <h2 class="section-title__heading" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300"
                        data-aos-once="true">Get better conversion with user-friendly and mobile optimized websites</h2>
                        <a class="btn btn--lg-2 btn-readical-red text-white rounded-50 shadow--readical-red-4 mt-6" href="#"data-aos="fade-up" data-aos-duration="500" data-aos-delay="500"
                        data-aos-once="true">Learn More</a>
                </div>
                <!--/ .Section Title -->
            </div>
            <div class="col-xxl-6 offset-xxl-1 col-xl-7 col-lg-6 col-md-11">
            <div class="services-right">
                <div class="section-title section-title--l5 mb-6">
                    <p class="section-title__description"data-aos="fade-up" data-aos-duration="500"
                    data-aos-once="true">If you don’t have a website or can’t be found on the first
                        page of Google<br class="d-none d-md-block d-lg-none d-xl-block"> then you are missing out on potential visitors and sales.</p>
                </div>
                <div class="widgets-services"data-aos="fade-up" data-aos-duration="500" data-aos-delay="300"
                data-aos-once="true">
                    {% for data in options.servicesCarddata %}
                    <!-- Single Services -->
                    {{Card.servicesWidget(
                    {
                    "image" : data.image,
                    "heading" : data.heading,
                    "text" : data.text
                    }
                    )}}
                    <!--/ .Single Services -->
                    {% endfor %}
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
{% endmacro %}