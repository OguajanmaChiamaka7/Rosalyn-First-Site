{% macro render(options) %}
    {% import "components/Cards/cards.njk" as Card %}
    <div class="testimonial-section testimonial-section--l7 bg-default-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-6 col-md-8 col-xs-10">
                    <div class="section-title section-title--l7 text-center">
                        <h6 class="section-title__sub-heading text-readical-red" data-aos="fade-up" data-aos-duration="500" data-aos-once="true">Our Team</h6>
                        <h2 class="section-title__heading" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300" data-aos-once="true">Meet the minds shaping your digital business</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="testimonial-slider--l7" data-aos="fade-up" data-aos-duration="500" data-aos-delay="500" data-aos-once="true">
            {% for data in options.testimonialTwoData %}
                    {{Card.testimonialFour(
                        {
                        "image"    : data.image, 
                        "userName" : data.userName, 
                        "userPosition" : data.userPosition,
                        "description":data.description
                        }
                    )}}
            {% endfor %}
        </div>
    </div>
{% endmacro %}