{% macro render(options) %}
{% import "components/_newsletter.njk" as newsletterOne %}
<div class="welcome-area welcome-area--l4 bg-default dark-mode-texts"
    style="background-image: url(./image/home-4/hero-l4-image.png);">
    <div class="container">
        <div class="row align-items-center justify-content-center justify-content-md-start">
            <!-- Welcome content Area -->
            <div class="col-xxl-6 col-xl-7 col-lg-9 col-md-10">
                <div class="welcome-content welcome-content--l3">
