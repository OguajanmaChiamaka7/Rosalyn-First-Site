{% extends "template.njk" %}

{#
<!-- Page Section Import Here --> #}

{% block main %}
<!-- Clean The Code And Hop in -->
<div class="form-block form-bloc--reset-pass bg-default-3 vh-100 position-relative">
  <div class="container position-static vh-100">

    <div class="row align-items-center justify-content-center position-static vh-100">
      <div class="col-xl-6 col-lg-5 position-static vh-100 d-none d-lg-block">
        <div class="form-img position-absolute bg-image" style="background-image: url(./image/jpg/reset-pass-img.jpg)">
        </div>
      </div>
      <div class="col-xxl-5 col-xl-6 col-lg-7 col-md-8 col-xs-10">
        <div class="section-title section-title--innerpage">
          <h2 class="section-title__heading" data-aos="fade-up" data-aos-duration="500" data-aos-once="true">Reset Password</h2>
          <p class="section-title__description" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300" data-aos-once="true">Enter your email to get reset link.</p>
        </div>
        <div class="form-box form-box--reset" data-aos="fade-up" data-aos-duration="500" data-aos-delay="500" data-aos-once="true">
          <form action="./" class="contact-form" data-aos="fade-up" data-aos-duration="500" data-aos-delay="300"
            data-aos-once="true">
            <div class="form-floating">
              <input class="form-control mb-2" type="text" placeholder="Leave a comment here" id="floatinginput" />
              <label for="floatinginput">Your Email</label>
            </div>
            <button class="btn btn-primary shadow--primary-7 btn--lg-2 rounded-55 text-white mt-3">Send Reset Link </button>
          </form>
          <div class="buttons mt-6" data-aos="fade-up" data-aos-duration="500" data-aos-delay="700" data-aos-once="true">
            <p class="">Remember the password?<a class="btn-link text-electric-violet-2 ms-2" href="/sign-in.html">Sign In now</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}